<div id="articles">
  <%# <p class="alert"><%= notice %></p> %>
  <div class="show">
    <h5>Title: </h5><h6><%= @article.title %></h6>
    <h5>Text: </h5><h6><%= @article.content %></h6>
    <h5>Comments:</h5>
<% @article.comments.each do |comment| %>
  <p>Commenter: <%= comment.commenter %></p>
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>
 
    <h6>Add a comment</h6>
<div><%= form_with(model: [ @article, @article.comments.build ], local: true) do |form| %>
  <p>
    <%= form.label Comment %><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label "Add your comment here "%><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %></div>
    <p><%= link_to 'Edit', edit_article_path(@article) %> |
    <%= link_to 'Back', articles_path %></p>
  </div>

</div>